---
import WorkTitle from '@components/WorkTitle.astro';
import NowWatching from '@components/NowWatching';
import SlideTitle from '@components/SlideTitle';
import NavFooter from '@components/NavFooter.astro';
import ZerendorLayout from '@layouts/ZerendorLayout.astro';
---

<ZerendorLayout title="36days2 x Zerendor">
  <div transition:animate="none">
    <NowWatching worktitle="36days" />
  </div>
  <div class="mt-24" transition:animate="none">
    <img src="/logo/zereLogo.png" alt="Zerendor Logo" width={26} height={19} />
  </div>
  <div transition:animate="slide">
    <SlideTitle slidetitle="Burning passion" />
    <WorkTitle title="Two" />
    <img src="/36pics/2RECAP.png" alt="Foto 2" class="mt-4 rounded-img" />
  </div>
  <NavFooter returnPath="/36days/36days1" nextPath="/36days/36days3" />
</ZerendorLayout>
